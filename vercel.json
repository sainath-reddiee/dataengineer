# Vercel Configuration for Canonical URLs and Performance
{
    "redirects": [
        {
            "source": "/:path(.*)/",
            "destination": "/:path*",
            "permanent": true
        },
        {
            "source": "http://dataengineerhub.blog/:path*",
            "destination": "https://dataengineerhub.blog/:path*",
            "permanent": true
        },
        {
            "source": "http://www.dataengineerhub.blog/:path*",
            "destination": "https://dataengineerhub.blog/:path*",
            "permanent": true
        },
        {
            "source": "https://www.dataengineerhub.blog/:path*",
            "destination": "https://dataengineerhub.blog/:path*",
            "permanent": true
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*).html",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}