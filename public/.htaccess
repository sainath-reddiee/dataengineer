# ==============================================================================
# DATAENGINEERHUB.BLOG - SEO-OPTIMIZED .HTACCESS CONFIGURATION
# Fixed: Redirect errors, indexing issues, and character encoding
# ==============================================================================

# ==============================================================================
# A) REACT ROUTER & SPA CONFIGURATION WITH STATIC ARTICLE SUPPORT
# ==============================================================================

<IfModule mod_rewrite.c>
    # Turn on the rewriting engine
    RewriteEngine On
    
    # Set the base for all relative paths
    RewriteBase /
    
    # ========================================================================
    # CRITICAL FIX: Proper redirect order to prevent loops
    # ========================================================================
    
    # Step 1: Redirect www to non-www FIRST (both HTTP and HTTPS)
    RewriteCond %{HTTP_HOST} ^www\.dataengineerhub\.blog [NC]
    RewriteRule ^(.*)$ https://dataengineerhub.blog/$1 [L,R=301]
    
    # Step 2: Force HTTPS (only if not already HTTPS and not www)
    RewriteCond %{HTTPS} off
    RewriteCond %{HTTP_HOST} !^www\. [NC]
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # ========================================================================
    # CRITICAL FIX: Handle trailing slashes consistently (SEO!)
    # ========================================================================
    
    # Remove trailing slash from non-directory URLs (except root)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^(.+)/$ /$1 [R=301,L]
    
    # ========================================================================
    # CRITICAL FIX: Serve static HTML for articles if it exists
    # ========================================================================
    
    # For requests to /articles/slug (without trailing slash)
    # Check if /articles/slug/index.html exists
    RewriteCond %{REQUEST_URI} ^/articles/([^/]+)/?$
    RewriteCond %{DOCUMENT_ROOT}/articles/%1/index.html -f
    RewriteRule ^articles/([^/]+)/?$ /articles/$1/index.html [L]
    
    # ========================================================================
    # IMPORTANT: Exclude common files from rewrite rules
    # ========================================================================
    
    # Don't rewrite robots.txt, sitemap.xml, favicon.ico
    RewriteRule ^(robots\.txt|sitemap\.xml|sitemap_index\.xml|favicon\.ico)$ - [L]
    
    # ========================================================================
    # IMPORTANT: Allow real files and directories to be served directly
    # ========================================================================
    
    # If the requested path IS a real file, serve it
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # If the requested path IS a real directory, serve it
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # ========================================================================
    # Fallback: For everything else, serve React app (index.html)
    # ========================================================================
    RewriteRule ^ /index.html [L]

</IfModule>

# ==============================================================================
# B) BROWSER CACHING - EXTENDED (PERFORMANCE BOOST)
# ==============================================================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images - cache for 1 year (immutable assets)
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/vnd.microsoft.icon "access plus 1 year"
    
    # CSS and JavaScript - cache for 1 year (versioned assets)
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    
    # Fonts - cache for 1 year
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
    ExpiresByType application/x-font-opentype "access plus 1 year"
    ExpiresByType application/x-font-truetype "access plus 1 year"
    ExpiresByType application/x-font-ttf "access plus 1 year"
    
    # Media files - cache for 1 year
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"
    ExpiresByType audio/mpeg "access plus 1 year"
    ExpiresByType audio/ogg "access plus 1 year"
    
    # HTML - SHORT cache for articles (1 hour so Googlebot gets fresh content)
    ExpiresByType text/html "access plus 1 hour"
    
    # Data files - cache for 1 hour
    ExpiresByType application/json "access plus 1 hour"
    ExpiresByType application/xml "access plus 1 day"
    ExpiresByType text/xml "access plus 1 day"
    ExpiresByType text/plain "access plus 1 day"
    
    # Manifest and sitemap
    ExpiresByType application/manifest+json "access plus 1 week"
    
    # Default - cache for 1 day
    ExpiresDefault "access plus 1 day"

</IfModule>

# Cache-Control Headers (more modern than Expires)
<IfModule mod_headers.c>
    # Static assets with hash/version - immutable for 1 year
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|css|js|woff|woff2|ttf|otf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # HTML files in articles/ - shorter cache so crawlers get updates
    <FilesMatch "^articles/.*\.html$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
    
    # Other HTML files - short cache with revalidation
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
    
    # JSON, XML, TXT - moderate cache
    <FilesMatch "\.(json|xml|txt)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
    
    # Remove ETags (they cause caching issues with multiple servers)
    Header unset ETag
    FileETag None

</IfModule>

# ==============================================================================
# C) GZIP COMPRESSION - EXTENDED (PERFORMANCE)
# ==============================================================================

<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    
    # Compress JavaScript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    
    # Compress XML
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/atom+xml
    
    # Compress fonts
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE application/font-woff
    AddOutputFilterByType DEFLATE application/font-woff2
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
    AddOutputFilterByType DEFLATE application/x-font-opentype
    AddOutputFilterByType DEFLATE application/x-font-truetype
    AddOutputFilterByType DEFLATE application/x-font-ttf
    
    # Compress SVG
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE image/x-icon
    
    # Remove browser bugs (only needed for ancient browsers)
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    Header append Vary User-Agent

</IfModule>

# ==============================================================================
# D) SECURITY HEADERS - ENHANCED
# ==============================================================================

<IfModule mod_headers.c>
    # CORS - Allow your API subdomain
    Header always set Access-Control-Allow-Origin "https://app.dataengineerhub.blog"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type"
    
    # Prevent MIME-sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Prevent clickjacking
    Header set X-Frame-Options "DENY"
    
    # XSS Protection (legacy, but still good)
    Header set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy - balance between privacy and analytics
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Permissions Policy (formerly Feature-Policy)
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"

</IfModule>

# ==============================================================================
# E) PERFORMANCE OPTIMIZATIONS
# ==============================================================================

# Disable server signature (security + performance)
ServerSignature Off

# Prevent directory browsing
Options -Indexes

# Prevent access to hidden files (like .git, .env) - FIXED QUOTES
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent access to backup files - FIXED QUOTES
<FilesMatch "\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ==============================================================================
# F) CUSTOM ERROR PAGES - CRITICAL SEO FIX
# ==============================================================================

# IMPORTANT: Don't redirect ALL errors to index.html!
# This makes Google think error pages are successful pages

# Create proper 404 page that returns 404 status
ErrorDocument 404 /404.html

# For other errors, you can create dedicated error pages
# or use server defaults (better for SEO than redirecting to index.html)
# ErrorDocument 500 /500.html

# ==============================================================================
# G) ADDITIONAL PERFORMANCE TWEAKS
# ==============================================================================

# Enable Keep-Alive (faster for multiple requests)
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# Limit request size (prevent DoS)
LimitRequestBody 10485760

# Set default character set
AddDefaultCharset UTF-8

# ==============================================================================
# H) FILE-SPECIFIC OPTIMIZATIONS - FIXED QUOTES
# ==============================================================================

# Force download for certain file types
<FilesMatch "\.(pdf|doc|docx|xls|xlsx)$">
    Header set Content-Disposition "attachment"
</FilesMatch>

# Proper MIME types for web fonts
<IfModule mod_mime.c>
    AddType font/woff2 .woff2
    AddType font/woff .woff
    AddType font/ttf .ttf
    AddType font/otf .otf
    AddType application/vnd.ms-fontobject .eot
    
    # Additional MIME types for better compatibility
    AddType application/json .json
    AddType image/svg+xml .svg
    AddType image/webp .webp
</IfModule>

# ==============================================================================
# I) SEO-SPECIFIC OPTIMIZATIONS
# ==============================================================================

# Ensure XML sitemaps are served with correct MIME type
<FilesMatch "\.(xml)$">
    Header set Content-Type "application/xml; charset=utf-8"
</FilesMatch>

# Ensure robots.txt is served correctly
<FilesMatch "^robots\.txt$">
    Header set Content-Type "text/plain; charset=utf-8"
</FilesMatch>

# ==============================================================================
# END OF CONFIGURATION
